[Unit]
Description=Decimal Rest API daemon
Documentation=https://help.decimalchain.com

[Service]
Type=idle
User=centos
ExecStart=/home/centos/decimal/deccli --rest-server
Restart=always
RestartSec=30s
StandardOutput=journal
StandardError=journal
SyslogIdentifier=DECD

[Install]
WantedBy=multi-user.target
